<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonPurchaseSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Purchase" />

    <Spinner
        android:id="@+id/spinnerCustomersSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPurchaseSell"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/numberPicker1" />

    <ListView
        android:id="@+id/listViewItemsSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numberPickerSell"
        android:layout_alignParentRight="true" >

    </ListView>

    <NumberPicker
        android:id="@+id/numberPickerSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPurchaseSell"
        android:layout_alignParentRight="true" />

</RelativeLayout>